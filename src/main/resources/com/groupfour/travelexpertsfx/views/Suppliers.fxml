<?xml version="1.0" encoding="UTF-8"?>

        <?import com.jfoenix.controls.JFXButton?>
        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.image.Image?>
        <?import javafx.scene.image.ImageView?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.text.Font?>

<AnchorPane prefHeight="495.0" prefWidth="699.0" stylesheets="@../styles/suppliers.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupfour.travelexpertsfx.controllers.SuppliersController">
   <children>
      <!-- 📊 Suppliers Table -->
      <TableView fx:id="tvSuppliers" layoutX="109.0" layoutY="120.0"
                 prefHeight="237.0" prefWidth="482.0" styleClass="table-view"> <!-- 🔹 Added styleClass -->
         <columns>
            <TableColumn fx:id="tcId" prefWidth="188.0" text="Id" />
            <TableColumn fx:id="tcName" prefWidth="293.0" text="Name" />
         </columns>
      </TableView>

      <!-- 🎯 Action Buttons (Add, Edit, Delete) -->
      <HBox layoutX="109.0" layoutY="369.0" prefHeight="30.0" prefWidth="291.0" spacing="15">
         <children>
            <JFXButton fx:id="btnAdd" prefHeight="30.0" prefWidth="84.0"
                       text="Add" styleClass="jfx-button add-button"> <!-- 🔹 Added styleClass -->
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>

            <JFXButton fx:id="btnEdit" prefHeight="30.0" prefWidth="107.0"
                       text="Edit" styleClass="jfx-button edit-button"> <!-- 🔹 Added styleClass -->
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/edit2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>

            <JFXButton fx:id="btnDelete" prefHeight="30.0" prefWidth="97.0"
                       text="Delete" styleClass="jfx-button delete-button"> <!-- 🔹 Added styleClass -->
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/bin2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
      </HBox>

      <!-- 🔍 Search & Clear Buttons -->
      <HBox layoutX="16.0" layoutY="52.0" prefHeight="30.0" prefWidth="670.0" spacing="15">
         <children>
            <Label text="Supplier Name:" styleClass="label-text"> <!-- 🔹 Added styleClass -->
               <HBox.margin>
                  <Insets top="7.0" />
               </HBox.margin>
            </Label>

            <TextField fx:id="tfName" prefHeight="30.0" prefWidth="260.0" styleClass="text-field"> <!-- 🔹 Added styleClass -->
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>

            <JFXButton fx:id="btnSearch" prefHeight="30.0" prefWidth="84.0"
                       text="Search" styleClass="search-button"> <!-- 🔹 Added styleClass -->
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>

            <JFXButton fx:id="btnClear" prefHeight="30.0" prefWidth="84.0"
                       text="Clear" styleClass="clear-button"> <!-- 🔹 Added styleClass -->
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/clear.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
      </HBox>

      <!-- ✏️ Edit Field (Hidden by default) -->
      <HBox fx:id="editField" layoutX="16.0" layoutY="410.0" prefHeight="30.0"
            prefWidth="670.0" visible="false" spacing="15">
         <children>
            <Label text="Supplier Name:" styleClass="label-text"> <!-- 🔹 Added styleClass -->
               <HBox.margin>
                  <Insets top="7.0" />
               </HBox.margin>
            </Label>

            <TextField fx:id="edSupplierName" prefHeight="30.0" prefWidth="260.0" styleClass="text-field"> <!-- 🔹 Added styleClass -->
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>

            <JFXButton fx:id="btnSave" text="Update" styleClass="jfx-button"> <!-- 🔹 Added styleClass -->
               <HBox.margin>
                  <Insets left="10.0" top="3.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </children>
</AnchorPane>