<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" stylesheets="@../styles/register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupfour.travelexpertsfx.controllers.RegisterController">

    <children>
        <!-- Centered VBox -->
        <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="15.0">

            <!-- Page Title -->
            <Label styleClass="register-title" text="Register New Agent" />

            <!-- Email Input -->
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label styleClass="register-label" text="Agent Email:" />
                <TextField fx:id="txtEmail" prefWidth="300.0" promptText="Enter your email" styleClass="register-input" />
            </VBox>

            <!-- Password Input -->
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label styleClass="register-label" text="Password:" />
                <PasswordField fx:id="txtPassword" prefWidth="300.0" promptText="Enter your password" styleClass="register-input" />
            </VBox>

            <!-- Confirm Password -->
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label styleClass="register-label" text="Confirm Password:" />
                <PasswordField fx:id="txtConfirmPassword" prefWidth="300.0" promptText="Re-enter your password" styleClass="register-input" />
            </VBox>

            <!-- Role Selection -->
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label styleClass="register-label" text="Role:" />
                <ComboBox fx:id="comboRole" prefWidth="300.0" styleClass="register-combo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="agent" />
                            <String fx:value="manager" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <!-- Error / Success Message -->
            <Label fx:id="lblMessage" styleClass="register-message" text="" />

            <!-- Buttons (Register & Back) -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="btnRegister" onAction="#handleRegister" styleClass="register-button" text="Register" />
                <Button fx:id="btnBack" onAction="#handleBack" styleClass="back-button" text="Back to Login" />
            <VBox.margin>
               <Insets bottom="40.0" />
            </VBox.margin>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
