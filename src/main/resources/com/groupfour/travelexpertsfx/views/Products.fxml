<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="737.0" prefWidth="1011.0" stylesheets="@../styles/products.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.groupfour.travelexpertsfx.controllers.ProductsController">

   <children>
      <!-- ðŸ” Search & Filter Section -->
      <HBox alignment="CENTER" layoutX="3.0" layoutY="93.0" prefHeight="44.0" prefWidth="1005.0"
            AnchorPane.bottomAnchor="640.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label styleClass="label-text" text="Find Product:">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfSearchBar" prefHeight="34.0" prefWidth="250.0" promptText="Enter Product Name..."
                       styleClass="text-field">
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <JFXButton fx:id="btnSearch" onMouseClicked="#searchProduct" styleClass="search-button" text="Search">
               <graphic>
                  <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/search.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnClearSearch" onMouseClicked="#clearSearch" styleClass="clear-button" text="Clear">
               <graphic>
                  <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/clear.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>

      <!-- ðŸ“Š Expanded Products Table -->
      <TableView fx:id="tvProduct" layoutX="26.0" layoutY="130.0" prefHeight="500.0" prefWidth="940.0"
                 AnchorPane.bottomAnchor="140.0" AnchorPane.topAnchor="100.0" styleClass="table-view">
         <columns>
            <TableColumn fx:id="colProductId" prefWidth="150.0" text="Product ID" />
            <TableColumn fx:id="colProductName" prefWidth="790.0" text="Product Name" />
         </columns>
      </TableView>

      <!-- ðŸŽ¯ Action Buttons (Now Positioned Below the Table) -->
      <HBox alignment="CENTER" layoutX="26.0" layoutY="609.0" prefHeight="35.0" prefWidth="960.0"
            spacing="150.0" AnchorPane.bottomAnchor="85.0" AnchorPane.topAnchor="590.0">
         <children>
            <JFXButton fx:id="btnAdd" onMouseClicked="#addProduct" styleClass="add-button" text="Add">
               <graphic>
                  <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="btnEdit" onMouseClicked="#editProduct" styleClass="edit-button" text="Edit">
               <graphic>
                  <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/edit2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="btnDelete" onMouseClicked="#deleteProduct" styleClass="delete-button" text="Delete">
               <graphic>
                  <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/bin2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
      </HBox>

      <!-- âœï¸ Edit Field (Hidden by default) -->
      <HBox fx:id="HBoxEdit" alignment="CENTER" layoutX="16.0" layoutY="660.0" prefHeight="30.0" prefWidth="670.0"
            spacing="15" visible="false">
         <children>
            <Label styleClass="label-text" text="Product Name:">
               <HBox.margin>
                  <Insets top="7.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfProdName" prefHeight="30.0" prefWidth="260.0" styleClass="text-field"
                       promptText="Enter Product Name...">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
            <JFXButton fx:id="btnSaveChanges" onMouseClicked="#saveChangesProduct" styleClass="save-button" text="Save">
               <HBox.margin>
                  <Insets left="10.0" top="3.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>

   </children>
</AnchorPane>
